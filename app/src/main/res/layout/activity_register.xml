<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".inscription"

        >


        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="1"
            app:layout_constraintStart_toStartOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@android:color/holo_blue_light"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@android:color/holo_blue_light"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/baseline_arrow_forward_24"
                        />


                    <TextView
                        style="@style/BoldText"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:text="Vous Serez le plus proche au marché de travail "
                        android:textColor="#FF000000"
                        android:textSize="14sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/holo_blue_light"
                    android:text="c'est gratuit "
                    android:textColor="#FF000000"
                    android:textSize="15sp"
                    android:textStyle="bold" />


            </LinearLayout>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:labelFor="@+id/qui"
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="48dp"
                        android:text="Vous etes :"
                        android:layout_marginTop="15dp"
                        android:textColor="#FF000000"
                        android:textSize="14dp" />

                    <RadioGroup
                        android:id="@+id/qui"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="23dp"
                        android:orientation="vertical"
                        >

                        <RadioButton
                            android:id="@+id/c1"
                            android:layout_width="466dp"
                            android:layout_height="48dp"
                            android:text="Recruteur cherche des cv et pose des annonces de travail"
                            android:textSize="9dp" />

                        <RadioButton
                            android:id="@+id/c2"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text=" Candidat cherche des annonces et pose des cv "
                            android:textSize="10dp"
                            android:layout_marginTop="10dp"/>
                    </RadioGroup>
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">


                    <TextView
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:labelFor="@+id/tvName"

                        android:text="@string/user_name"
                        android:textColor="#FF000000"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/emailr"

                        android:layout_width="250dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/buttonshape"
                        android:elevation="4dp"
                        android:ems="10"
                        android:inputType="textWebEmailAddress"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:hint="@string/enterEmail"
                        android:textColor="#C0C0C0"
                        android:textSize="15sp" />
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="76dp"
                        android:labelFor="@+id/ville"
                        android:text="@string/ville"
                        android:textColor="#FF000000"
                        android:textSize="14dp" />

                    <Spinner
                        android:id="@+id/spinner8"
                        android:layout_width="120dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="20dp"
                        android:textSize="30dp" />


                </LinearLayout>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="right"
                        android:labelFor="@+id/tvPass"
                        android:text="@string/password"
                        android:textColor="#FF000000"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/passr"
                        android:layout_width="250dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="20dp"

                        android:background="@drawable/buttonshape"
                        android:elevation="4dp"
                        android:ems="10"
                        android:inputType="textWebEmailAddress"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:hint="Choissez un mot de passe..."
                        android:textColor="#C0C0C0"
                        android:textSize="15sp" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/md"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="0dp"

                        android:text="(au moins 5 caractères) Choisissez un mot de passe qui n'est pas facile à deviner"
                        android:textColor="#FF000000"
                        android:textSize="10dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="50dp">

                    <TextView
                        android:labelFor="@+id/tvPassword"
                        style="@style/BoldText"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="-10dp"
                        android:text="Confirmer le mot de passe :"
                        android:textColor="#FF000000"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/rpass"
                        android:layout_width="250dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp"
                        android:background="@drawable/buttonshape"
                        android:elevation="4dp"
                        android:ems="10"
                        android:inputType="textWebEmailAddress"
                        android:paddingLeft="5dp"
                        android:paddingBottom="5dp"
                        android:hint="Choissez un mot de passe..."
                        android:textColor="#C0C0C0"
                        android:textSize="15sp" />


                </LinearLayout>

            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_blue_light"
                android:orientation="horizontal"
                android:layout_marginTop="67dp"

                >

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="298dp"
                    android:layout_height="47dp"
                    android:paddingLeft="5dp"

                    android:paddingBottom="0dp"
                    android:text=" En validant mon inscription ,j'accept les conditions générales d'utilisation du site alkhadma "
                    android:textColor="#FFFFFFFF"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnreg"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:backgroundTint="#1EC61E"
                    android:text="Créer un Compte"
                    android:textColor="#FFFFFFFF"
                    android:textStyle="bold"
                    android:paddingTop="5dp"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"/>


            </LinearLayout>
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>